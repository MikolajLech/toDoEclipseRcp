<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="com.starterkit.app.tcp">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="com.starterkit.app.tcp"
            class="com.starterkit.app.tcp.views.SampleView"
            id="com.starterkit.app.tcp.views.SampleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.starterkit.app.tcp.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.starterkit.app.perspective">
         <view
               closeable="true"
               id="com.starterkit.app.tcp.views.SampleView"
               minimized="false"
               moveable="true"
               ratio="0.75"
               relationship="top"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="com.starterkit.app.tcp.views.SidePanelView"
            fastViewWidthRatio="0.5"
            id="com.starterkit.app.tcp.sidePanel"
            name="sidePanel"
            restorable="true">
      </view>
      <view
            class="com.starterkit.app.tcp.views.ToDo"
            id="com.starterkit.app.tcp.toDo"
            name="ToDo"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.starterkit.app.perspective">
         <view
               closeable="true"
               id="com.starterkit.app.tcp.sidePanel"
               minimized="false"
               moveable="true"
               ratio="0.3"
               relationship="stack"
               relative="com.starterkit.app.tcp.views.SampleView"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.starterkit.app.perspective">
         <view
               closeable="true"
               id="com.starterkit.app.tcp.toDo"
               minimized="false"
               moveable="true"
               relationship="right"
               relative="com.starterkit.app.tcp.views.SampleView"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
